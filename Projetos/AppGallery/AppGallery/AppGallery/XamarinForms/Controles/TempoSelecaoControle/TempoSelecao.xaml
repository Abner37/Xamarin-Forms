<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.TempoSelecaoControle.TempoSelecao"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Time, Format" />
            <TimePicker Time="14:15" Format="HH:mm"/>

            <Label Text="TextColor, FontFamily, FontSize, FontAttributes, CharacterSpacing" />
            <TimePicker TextColor="Accent" FontFamily="sans-serif-light" FontSize="18" FontAttributes="Italic" CharacterSpacing="3"
                        Format="HH:mm"/>

            <Label Text="Evento(s): PropertyChanged" />
            <TimePicker PropertyChanged="TimePicker_PropertyChanged"
                        Format="HH:mm"/>

            <Label x:Name="lblInformativo" Text="-"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>