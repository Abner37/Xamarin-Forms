<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.InterruptorControle.Interruptor"
             
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Nativo (Padrão)"/>
            <Switch HorizontalOptions="Start"/>
            
            <Label Text="IsToggled"/>
            <Switch IsToggled="True" HorizontalOptions="Start"/>

            <Label Text="OnColor, ThumbColor"/>
            <Switch OnColor="LightGreen" ThumbColor="Green"
                    HorizontalOptions="Start"/>

            <Label Text="Evento: Toggled"/>
            <Switch x:Name="swtControl"
                    Toggled="Switch_Toggled"
                    HorizontalOptions="Start"/>
            <Label x:Name="lblInformativo"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>