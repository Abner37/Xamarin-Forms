<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.DataSelecaoControle.DataSelecao"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Date, MinimumDate, MaximumDate" />
            <DatePicker Date="01/22/2020" MinimumDate="01/13/2020" MaximumDate="01/27/2020" />

            <Label Text="Format" />
            <DatePicker Format="dd/MM/yyyy" />

            <Label Text="TextColor, FontFamily, FontSize, FontAttributes, CharacterSpacing" />
            <DatePicker TextColor="Accent" FontFamily="sans-serif-light" FontSize="24" FontAttributes="Italic" CharacterSpacing="5"
                        Format="dd/MM/yyyy"/>

            <Label Text="Eventos: DateSelected" />
            <DatePicker Format="dd/MM/yyyy" 
                        DateSelected="DatePicker_DateSelected"/>

            <Label x:Name="lblInformativo" Text="-"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>