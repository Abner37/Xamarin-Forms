<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.PassadorControle.Passador"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Increment, Minimum, Maximum, Value" />
            <Stepper Increment="5" Minimum="0" Maximum="50" Value="5" />

            <Label Text="ValueChanged" />
            <Stepper ValueChanged="Stepper_ValueChanged" />
            <Label x:Name="lblInformativo" Text="-"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>