<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Leiautes.QuadradoLeiaute.Quadrado">
    <ContentPage.Content>
        <StackLayout Padding="20, 50" Spacing="40">
            
            <Frame HorizontalOptions="Center"
                   CornerRadius="100"
                   Padding="0"
                   IsClippedToBounds="True">
                <BoxView BackgroundColor="Green"
                         WidthRequest="150" HeightRequest="150"/>
            </Frame>

            <Frame Padding="10">
                <StackLayout>
                    <Label Text="Steven Spielberg"
                           TextColor="Black" FontSize="24"
                           Margin="20, 20, 20, 10"/>
                    <BoxView HeightRequest="1" Color="LightGray"/>
                    <Label Text="Diretor com mais indicações ao Oscar."
                           Margin="20"/>
                </StackLayout>
            </Frame>

            <Frame HasShadow="True"
                   BorderColor="Green"
                   CornerRadius="100">

                <Label Text="Welcome to Xamarin.Forms!"
                           VerticalOptions="CenterAndExpand" 
                           HorizontalOptions="CenterAndExpand" />

            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>